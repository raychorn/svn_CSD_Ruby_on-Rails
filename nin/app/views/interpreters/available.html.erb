<h3>Pricing Plan: <%= @plan.title %></h3>
<h4>Blocked day/times</h4>

<div class="row-fluid">
	<div class="span15">
	    <div class="row-fluid">
			<div class="span3 fit_fields" >
			  <u>Effective date</u>
			</div>

			<div class="span3 fit_fields" >
			  <u>End date</u>
			</div>

			<div class="span3" >
			  <u>Start time</u>
			</div>

			<div class="span3" >
			  <u>End time</u>
			</div>
			
			<div class="span3" >
			  <u>Day of week</u>
			</div>
	    </div>
	</div>
</div>	
<% for block in @pricing %>
<div class="row-fluid">
	<div class="span15">
	    <div class="row-fluid">
			<div class="span3 fit_fields" >
				<%= block.effective_date.strftime("%m/%d/%Y") %>
			</div>

			<div class="span3 fit_fields" >
			  <%= block.end_date.strftime("%m/%d/%Y") %>
			</div>
			<div class="span3" >
			  <%= block.start_time.strftime("%l:%M %p") %>
			</div>

			<div class="span3" >
			  <%= block.end_time.strftime("%l:%M %p") %>
			</div>
			
			<div class="span3" >
			  <%= block.day_of_week %>
			</div>
	    </div>
	</div>
</div>
<% end %>	

<div id='calendar'></div>