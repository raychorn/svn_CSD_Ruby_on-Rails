<div class="container" style="margin-top:70px;">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <h2 class="form-signin-heading">Edit <%= resource_name.to_s.humanize %></h2>
  <% unless devise_error_messages!.empty? %>
  <div class="alert alert-error fade in">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <%= devise_error_messages! %>
  </div>
  <% end %>

  <%= f.email_field :email, :class=>"input-block-level", :placeholder=>"Email address" %>
  <small><i>(Current password to confirm your changes)</i></small><br />
  <%= f.password_field :current_password, :autocomplete => "off", :class=>"input-block-level", :placeholder=>"Current Password"  %>
  <%= f.password_field :password, :autocomplete => "off", :class=>"input-block-level", :placeholder=>"New Password" %>
  <%= f.password_field :password_confirmation, :autocomplete => "off", :class=>"input-block-level", :placeholder=>"Confirm New Password" %>

  <br/>
  <%= f.submit "Update", :class=>"btn btn-large btn-primary" %>
  <%= link_to "Cancel", :back  %>
  <br/><br/>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure you want to delete this account?" }, :method => :delete %>.</p>

  <% end %>

</div> 
